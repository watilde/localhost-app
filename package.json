{
  "name": "localhost-app",
  "version": "0.1.0",
  "private": true,
  "homepage": "./",
  "main": "public/electron.js",
  "dependencies": {
    "@material-ui/core": "^4.8.2",
    "@material-ui/icons": "^4.5.1",
    "@rescripts/cli": "0.0.13",
    "@rescripts/rescript-env": "0.0.11",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "electron": "^7.1.7",
    "electron-is-dev": "^1.1.0",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-scripts": "3.3.0",
    "serve-handler": "^6.1.2"
  },
  "scripts": {
    "start": "concurrently \"BROWSER=none npm run start:server\" \"wait-on http://localhost:3000 && electron .\"",
    "build": "rescripts build",
    "test": "rescripts test",
    "eject": "react-scripts eject",
    "start:server": "rescripts start",
    "postinstall": "electron-builder install-app-deps",
    "preelectron-pack": "npm run build",
    "electron-pack": "electron-builder build -mw"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^5.0.2",
    "electron-builder": "^21.2.0",
    "wait-on": "^3.3.0"
  },
  "author": {
    "name": "Daijiro Wachi",
    "email": "daijiro.wachi@gmail.com",
    "url": "https://watilde.com"
  },
  "build": {
    "appId": "com.watilde.localhost",
    "productName": "Localhost",
    "copyright": "Copyright Â© 2020 ${author}",
    "mac": {
      "category": "public.app-category.utilities"
    },
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    }
  }
}
